<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarsityMetrics.StatsIndividual">
    <Border Style="{StaticResource SurfaceBorder}"
            Padding="5">
        <VerticalStackLayout>
            
            <Label Style="{StaticResource Headline}"
                   HorizontalOptions="Start"
                   Text="{Binding Player.Banner}"/>
            <Label Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Start"
                   Text="{Binding Player.Position}"/>
            
        </VerticalStackLayout>
    </Border>
</ContentPage>