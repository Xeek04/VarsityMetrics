<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarsityMetrics.StatsPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
            Text="Statistics"
            Style="{StaticResource Headline}"
        />

        <Grid x:Name="statnav" IsVisible="false">
            <Button
                x:Name="back"
                Text="Back"
                HorizontalOptions="Start"
                Clicked="BackButton"
                Grid.Row="1"
                Grid.Column="0"
            />

            <Button
                x:Name="confirm"
                Text="Confirm"
                HorizontalOptions="End"
                Clicked="ConfirmAdd"
                Grid.Row="1"
                Grid.Column="1"
            />
        </Grid>

        <Button
            x:Name="addplayerstats"
            IsEnabled="True"
            Text="Add Player Stats"
            HorizontalOptions="End"
            Clicked="AddStats"
            IsVisible="True"
        />
        
        <Button
            x:Name="showplayerstats"
            IsEnabled="True"
            Text="Show Player Stats"
            HorizontalOptions="End"
            Clicked="StatSelection"
        />

        <Picker
            x:Name="playerList"
            IsVisible="False"
            HorizontalOptions="Center"
            SelectedIndexChanged="ShowStatEntries"
        />

        <Picker
            x:Name="playerListStats"
            IsVisible="False"
            HorizontalOptions="Center"
            SelectedIndexChanged="ShowStats"
        />

        <Button
            x:Name="passbutton"
            Text=">"
            IsVisible="False"
            HorizontalOptions="Start"
            CommandParameter="pass"
            Clicked="EntryToggle"
        />
        
        <Grid x:Name="PassingView" IsVisible="False" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*,*,*">
            <Label
                Text="Attempts"
                Grid.Row="0"
                Grid.Column="0"
            />
            <Label
                Text="Completions"
                Grid.Row="0"
                Grid.Column="1"
            />
            <Label
                Text="Comp %"
                Grid.Row="0"
                Grid.Column="2"
            />
            <Label
                Text="Passing Yards"
                Grid.Row="0"
                Grid.Column="3"
            />
            <Label
                Text="Passing TDs"
                Grid.Row="0"
                Grid.Column="4"
            />
            <Label
                Text="Interceptions"
                Grid.Row="0"
                Grid.Column="5"
            />
            <Label
                Text="YPA"
                Grid.Row="0"
                Grid.Column="6"
            />

            <Entry
                x:Name="attsV"
                Grid.Row="1"
                Grid.Column="0"
                IsReadOnly="True"
            />
            <Entry
                x:Name="compV"
                Grid.Row="1"
                Grid.Column="1"
                IsReadOnly="True"
            />
            <Entry
                x:Name="compperV"
                Grid.Row="1"
                Grid.Column="2"
                IsReadOnly="True"
            />
            <Entry
                x:Name="passydsV"
                Grid.Row="1"
                Grid.Column="3"
                IsReadOnly="True"
            />
            <Entry
                x:Name="passtdsV"
                Grid.Row="1"
                Grid.Column="4"
                IsReadOnly="True"
            />
            <Entry
                x:Name="intsV"
                Grid.Row="1"
                Grid.Column="5"
                IsReadOnly="True"
            />
            <Entry
                x:Name="ypaV"
                Grid.Row="1"
                Grid.Column="6"
                IsReadOnly="True"
            />            
        </Grid>
        
        <Grid x:Name="PassingStats" IsVisible="False" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*">

            <Label
                Text="Attempts"
                Grid.Row="0"
                Grid.Column="0"
            />
            <Label
                Text="Completions"
                Grid.Row="0"
                Grid.Column="1"
            />
            <Label
                Text="Passing Yards"
                Grid.Row="0"
                Grid.Column="2"
            />
            <Label
                Text="Passing TDs"
                Grid.Row="0"
                Grid.Column="3"
            />
            <Label
                Text="Interceptions"
                Grid.Row="0"
                Grid.Column="4"
            />

            <Entry
                x:Name="atts"
                Grid.Row="1"
                Grid.Column="0"
            />
            <Entry
                x:Name="comps"
                Grid.Row="1"
                Grid.Column="1"
            />
            <Entry
                x:Name="passyds"
                Grid.Row="1"
                Grid.Column="2"
            />
            <Entry
                x:Name="passtds"
                Grid.Row="1"
                Grid.Column="3"
            />
            <Entry
                x:Name="ints"
                Grid.Row="1"
                Grid.Column="4"
            />
        </Grid>

        <Button
            x:Name="rushbutton"
            Text=">"
            IsVisible="False"
            HorizontalOptions="Start"
            CommandParameter="rush"
            Clicked="EntryToggle"
        />

        <Grid x:Name="RushingView" IsVisible="False" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*,*,*">
            <Label
                Text="Rush Attempts"
                Grid.Row="0"
                Grid.Column="0"
            />
            <Label
                Text="Rushing Yards"
                Grid.Row="0"
                Grid.Column="1"
            />
            <Label
                Text="Rushing TDs"
                Grid.Row="0"
                Grid.Column="2"
            />
            <Label
                Text="Fumbles"
                Grid.Row="0"
                Grid.Column="3"
            />
            <Label
                Text="YPC"
                Grid.Row="0"
                Grid.Column="4"
            />

            <Entry
                x:Name="rushattV"
                Grid.Row="1"
                Grid.Column="0"
                IsReadOnly="True"
            />
            <Entry
                x:Name="rushydsV"
                Grid.Row="1"
                Grid.Column="1"
                IsReadOnly="True"
            />
            <Entry
                x:Name="rushtdsV"
                Grid.Row="1"
                Grid.Column="2"
                IsReadOnly="True"
            />
            <Entry
                x:Name="fumV"
                Grid.Row="1"
                Grid.Column="3"
                IsReadOnly="True"
            />
            <Entry
                x:Name="ypcV"
                Grid.Row="1"
                Grid.Column="4"
                IsReadOnly="True"
            />            
        </Grid>
        
        <Grid x:Name="RushingStats" IsVisible="False" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*">

            <Label
                Text="Rush Attempts"
                Grid.Row="0"
                Grid.Column="0"
            />
            <Label
                Text="Rushing Yards"
                Grid.Row="0"
                Grid.Column="1"
            />
            <Label
                Text="Rushing TDs"
                Grid.Row="0"
                Grid.Column="2"
            />
            <Label
                Text="Fumbles"
                Grid.Row="0"
                Grid.Column="3"
            />

            <Entry
                x:Name="rushatt"
                Grid.Row="1"
                Grid.Column="0"
            />
            <Entry
                x:Name="rushyds"
                Grid.Row="1"
                Grid.Column="1"
            />
            <Entry
                x:Name="rushtds"
                Grid.Row="1"
                Grid.Column="2"
            />
            <Entry
                x:Name="fum"
                Grid.Row="1"
                Grid.Column="3"
            />
        </Grid>

        <Button
            x:Name="recbutton"
            Text=">"
            IsVisible="False"
            HorizontalOptions="Start"
            CommandParameter="rec" 
            Clicked="EntryToggle"
        />
        <Grid x:Name="RecView" IsVisible="False" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*,*,*">
            <Label
                Text="Targets"
                Grid.Row="0"
                Grid.Column="0"
            />
            <Label
                Text="Receptions"
                Grid.Row="0"
                Grid.Column="1"
            />
            <Label
                Text="Receiving Yards"
                Grid.Row="0"
                Grid.Column="2"
            />
            <Label
                Text="Receiving TDs"
                Grid.Row="0"
                Grid.Column="3"
            />
            <Label
                Text="YPR"
                Grid.Row="0"
                Grid.Column="4"
            />

            <Entry
                x:Name="tarV"
                Grid.Row="1"
                Grid.Column="0"
                IsReadOnly="True"
            />
            <Entry
                x:Name="recV"
                Grid.Row="1"
                Grid.Column="1"
                IsReadOnly="True"
            />
            <Entry
                x:Name="recyrdsV"
                Grid.Row="1"
                Grid.Column="2"
                IsReadOnly="True"
            />
            <Entry
                x:Name="rectdsV"
                Grid.Row="1"
                Grid.Column="3"
                IsReadOnly="True"
            />
            <Entry
                x:Name="yprV"
                Grid.Row="1"
                Grid.Column="4"
                IsReadOnly="True"
            />
        </Grid>
        <Grid x:Name="ReceivingStats" IsVisible="False" RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*">

            <Label
                Text="Targets"
                Grid.Row="0"
                Grid.Column="0"
            />
            <Label
                Text="Receptions"
                Grid.Row="0"
                Grid.Column="1"
            />
            <Label
                Text="Receiving Yards"
                Grid.Row="0"
                Grid.Column="2"
            />
            <Label
                Text="Receiving TDs"
                Grid.Row="0"
                Grid.Column="3"
            />

            <Entry
                x:Name="tar"
                Grid.Row="1"
                Grid.Column="0"
            />
            <Entry
                x:Name="rec"
                Grid.Row="1"
                Grid.Column="1"
            />
            <Entry
                x:Name="recyrds"
                Grid.Row="1"
                Grid.Column="2"
            />
            <Entry
                x:Name="rectds"
                Grid.Row="1"
                Grid.Column="3"
            />
        </Grid>

    </VerticalStackLayout>
</ContentPage>