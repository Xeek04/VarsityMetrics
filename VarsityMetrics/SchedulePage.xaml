<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarsityMetrics.SchedulePage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">
    <Frame Style="{StaticResource Surface}">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*,0.5*">
            <Button 
                Text="Back"
                Clicked="Back"
                Grid.Column="0"
                HorizontalOptions="Start"
            />
            <Button
                Text="Edit Scores"
                Clicked="EditScores"
                Grid.Column="1"
                HorizontalOptions="End"
            />
            <Button
                Text="Edit Schedule"
                Clicked="ShowEntries"
                Grid.Column="2"
                HorizontalOptions="End"
            />
            </Grid>
        <Grid x:Name="currentSchedule" ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*" IsVisible="True">
            <Label
                Text="Matchup"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalOptions="Center"
                FontSize="Medium"
            />
            <Label
                Text="Date"
                Grid.Column="3"
                Grid.Row="0"
                HorizontalOptions="Center"
                FontSize="Medium"
            />
            <Label
                Text="Location"
                Grid.Column="4"
                Grid.Row="0"
                HorizontalOptions="Center"
                FontSize="Medium"
            />
        </Grid>
        <Grid x:Name="gameEditor" ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*" IsVisible="False">
            <Label
                Text="Opponent"
                Grid.Column="0"
                Grid.Row="0"
                HorizontalOptions="Center"
            />
            <Label
                Text="Date"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalOptions="Center"
            />
            <Label
                Text="Home Game"
                Grid.Column="2"
                Grid.Row="0"
                HorizontalOptions="Center"
            />
            <Label
                Text="Location (Optional)"
                Grid.Column="3"
                Grid.Row="0"
                HorizontalOptions="Center"
            />
        </Grid>
        <Grid x:Name="inputEntries" ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*" IsVisible="False">
            <Entry
                x:Name="opp"
                Grid.Column="0"
            />
            <DatePicker
                x:Name="date"
                Grid.Column="1"
                HorizontalOptions="Center"
            />
            <CheckBox
                x:Name="home"
                Grid.Column="2"
                HorizontalOptions="Center"
            />
            <Entry
                x:Name="location"
                Grid.Column="3"
            />
            <Button
                Text="Confirm"
                Grid.Column="4"
                BackgroundColor="LightGreen"
                Clicked="Confirm"
            />
        </Grid>
        <Button
            x:Name="addGame"
            Text="+"
            HorizontalOptions="Start"
            IsVisible="False"
            Clicked="ShowInput"
        />
    </VerticalStackLayout>
    </Frame>
</ContentPage>