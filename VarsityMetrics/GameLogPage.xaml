<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:VarsityMetrics.ViewModels"
             x:Class="VarsityMetrics.GameLogPage"
             >
    <ContentPage.BindingContext>
        <vm:GameLogViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Style TargetType="Frame" x:Key="HistoryFrame">
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
            <!--<Setter Property="Padding" Value="10"/>-->
        </Style>

        <Style TargetType="Label" x:Key="HistoryTitle">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
        </Style>

        <Style TargetType="Button" x:Key="GameLogTab">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="Border" x:Key="GridBorder">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="3"/>
            <Setter Property="IsVisible" Value="{Binding ViewGrid}"/>
        </Style>
    </ContentPage.Resources>
    
    

    <Grid RowDefinitions="100,100,*"
          ColumnDefinitions="auto,*,*,*,*"
          RowSpacing="0"
          ColumnSpacing="0"
          Margin="10">

        <Button
            Grid.Row="0"
            Grid.Column="1"
            VerticalOptions="Start"
            HorizontalOptions="Start"
            Style="{DynamicResource GameLogTab}"
            WidthRequest="120"
            Text="Full Schedule"
            Clicked="EditSchedule"
        />

        <CollectionView 
            ItemsSource="{Binding Schedule}"
            SelectedItem="{Binding CurrentGame, Mode=TwoWay}"  
            x:Name="HistoryCollection"
            Grid.Row="0" Grid.RowSpan="3"
            Grid.Column="0"
            WidthRequest="240"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600} }"
            SelectionMode="Single"
            EmptyView="No games loaded"
            SelectionChanged="GameChanged"> <!-- Game Timeline -->
            <CollectionView.ItemTemplate> <!-- Template for Timeline Cards -->
                <DataTemplate>
                    <Frame Style="{DynamicResource HistoryFrame}">
                        <VerticalStackLayout>
                            <Label Style="{DynamicResource HistoryTitle}"
                                   Text="{Binding OppTeam}"/>
                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label Text="{Binding Date}"/>
                                <!--<Label Text="{Binding ScoreDisplay}"/>-->
                            </FlexLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        

        <Border Style="{DynamicResource GridBorder}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"/> <!-- Selected Game Banner -->
        <Label Text="{Binding CurrentGame.BannerText}"
               Style="{DynamicResource Headline}"
               VerticalOptions="End"
               Grid.Row="0"
               Grid.Column="1"
               Grid.ColumnSpan="3"/>

        <!-- Team Score Button -->
        <Border Style="{DynamicResource GridBorder}" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="teamScoreButton"
                Command="{Binding SetTeamModeCommand}"
                Style="{DynamicResource GameLogTab}"
                Text="Team Score"
                Grid.Row="1"
                Grid.Column="1"/>

        <!-- Box Score Button -->
        <Border Style="{DynamicResource GridBorder}" Grid.Row="1" Grid.Column="2"/>
        <Button x:Name="boxScoreButton"
                Command="{Binding SetBoxModeCommand}"
                Style="{DynamicResource GameLogTab}"
                Text="Box Score"
                Grid.Row="1"
                Grid.Column="2"/>

        <!-- Film Button -->
        <Border Style="{DynamicResource GridBorder}" Grid.Row="1" Grid.Column="3"/>
        <Button x:Name="filmButton"
                Command="{Binding SetFilmModeCommand}"
                Style="{DynamicResource GameLogTab}"
                Text="Review Film"
                Grid.Row="1"
                Grid.Column="3"/>

        <!-- Content Area -->
        <Border Style="{DynamicResource GridBorder}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>

        <!-- Film -->
        <Grid 
            IsVisible="{Binding FilmMode, Mode=TwoWay}"
            Grid.Row="2"
            Grid.Column="1" Grid.ColumnSpan="3"
            RowDefinitions="350, auto, auto"
            RowSpacing="10">
            
            <toolkit:MediaElement 
                x:Name="GameVideoPlayer"
                IsVisible="{Binding NotNullVideo, Mode=TwoWay}"
                Source="{Binding MediaSource, Mode=TwoWay}"
                HeightRequest="300"
                WidthRequest="500"
                Grid.Row="0"/>

            <Button
                x:Name="changeVideo"
                Text="{Binding ChangeVideoText}"
                Command="{Binding OpenChangeVideoCommand}"
                Grid.Row="1"
                WidthRequest="300"
                HeightRequest="50"
                VerticalOptions="Center" HorizontalOptions="Center"
                />

            <Entry
                x:Name="NewUri"
                IsVisible="{Binding EntryVisible}"
                Text="{Binding NewUri, Mode=TwoWay}"
                ReturnCommand="{Binding ChangeVideoCommand}"
                Grid.Row="2"
                HeightRequest="50"
                WidthRequest="1000"
                VerticalOptions="Start" HorizontalOptions="Center"
                />

        </Grid>
        <!-- Team Score -->
        <Grid x:Name="TeamScore" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
              RowDefinitions="*,*,*,*,*,*,*,*,*,*,*"
              ColumnDefinitions="*,*,*,*,*,*"
              RowSpacing="0"
              ColumnSpacing="10"
              Margin="0"
              VerticalOptions="Start"
          
              IsVisible="{Binding TeamMode, Mode=TwoWay}">

            <Rectangle Grid.Row="1" VerticalOptions="Start" BackgroundColor="SlateGray" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="2" VerticalOptions="Start" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="3" VerticalOptions="Start" BackgroundColor="SlateGray" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="4" VerticalOptions="Start" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="5" VerticalOptions="Start" BackgroundColor="SlateGray" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="6" VerticalOptions="Start" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="7" VerticalOptions="Start" BackgroundColor="SlateGray" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="8" VerticalOptions="Start" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="9" VerticalOptions="Start" BackgroundColor="SlateGray" Grid.ColumnSpan="6"/>
            <!--<Rectangle Grid.Row="10" VerticalOptions="Start" Grid.ColumnSpan="6"/>
            <Rectangle Grid.Row="11" VerticalOptions="Start" BackgroundColor="SlateGray" Grid.ColumnSpan="6"/>-->

            <!-- Teams -->
            <Label
                Text="{Binding CurrentGame.ForTeam}"
                FontSize="Small"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="End"
            />
            <Label
                Text="{Binding CurrentGame.OppTeam}"
                FontSize="Small"
                Grid.Row="0"
                Grid.Column="4"
                Grid.ColumnSpan="3"
                HorizontalOptions="Start"
            />
            
            <!-- Stats -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="Passing Yards"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForPassYards}"
            />            
            <Label
                Grid.Row="1"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppPassYards}"
            />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Text="Rushing Yards"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForRushYards}"
            />            
            <Label
                Grid.Row="2"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppRushYards}"
            />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Text="Total Plays"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForTotalPlays}"
            />            
            <Label
                Grid.Row="3"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppTotalPlays}"
            />
            
            <Label
                Grid.Row="4"
                Grid.Column="0"
                Text="Total Drives"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="4"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForTotalDrives}"
            />            
            <Label
                Grid.Row="4"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppTotalDrives}"
            />
            
            <Label
                Grid.Row="5"
                Grid.Column="0"
                Text="Ints Thrown"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="5"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForIntsThrown}"
            />            
            <Label
                Grid.Row="5"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppIntsThrown}"
            />
            
            <Label
                Grid.Row="6"
                Grid.Column="0"
                Text="Fums Lost"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="6"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForFumsLost}"
            />            
            <Label
                Grid.Row="6"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppFumsLost}"
            />
            
            <Label
                Grid.Row="7"
                Grid.Column="0"
                Text="Times Sacked"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="7"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForTimesSacked}"
            />            
            <Label
                Grid.Row="7"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppTimesSacked}"
            />
            
            <Label
                Grid.Row="8"
                Grid.Column="0"
                Text="Times Sacked"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="8"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.ForTimesSacked}"
            />            
            <Label
                Grid.Row="8"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.OppTimesSacked}"
            />
            
            <Label
                Grid.Row="9"
                Grid.Column="0"
                Text="1st Downs"
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="9"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.For1stDowns}"
            />            
            <Label
                Grid.Row="9"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.Opp1stDowns}"
            />
            
            <!--<Label
                Grid.Row="10"
                Grid.Column="0"
                Text="3rd Down Eff."
                HorizontalOptions="Start"
            />
            <Label
                Grid.Row="10"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="{Binding CurrentStats.For3rdEff}"
            />            
            <Label
                Grid.Row="10"
                Grid.Column="4"
                HorizontalOptions="Start"
                Text="{Binding CurrentStats.Opp3rdEff}"
