<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarsityMetrics.GameLogPage">

    <Grid RowDefinitions=".1*,*,*" ColumnDefinitions=".2*,*,*,*" RowSpacing="5"
          ColumnSpacing="5" Margin="2">
        <Border Stroke="Black" StrokeThickness="3" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"/> <!-- Game Timeline -->
        <Border Stroke="Black" StrokeThickness="3" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"/> <!-- Selected Game Banner -->
    </Grid>
    
</ContentPage>