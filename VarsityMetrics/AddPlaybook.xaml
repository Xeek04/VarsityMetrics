<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarsityMetrics.AddPlaybook">

    <Grid RowDefinitions="50, Auto, Auto, Auto"
      ColumnDefinitions=".5*, .25*, .5*"
      Padding="10"
      ColumnSpacing="10"
      RowSpacing="10">

        <Button x:Name="button"
                Grid.Column="1"
                Grid.Row="0"
                Text="Upload Image"
                Clicked="Button_Clicked"
                IsVisible="True"/>
        
        <Image x:Name="apple"
               Grid.Column="1"
               Grid.Row="1"
               HeightRequest="200"
               IsVisible="Hidden"/>

        <VerticalStackLayout Padding="30,0"
                             Spacing="25"
                             Grid.Column="1"
                             Grid.Row="2">

            <Entry Placeholder="Enter Name"
                   x:Name="name"
                   Text="{Binding Name}"/>

            <Entry Placeholder="Enter Type"
                   x:Name="type"
                   Text="{Binding Type}"/>

        </VerticalStackLayout>

    </Grid>
</ContentPage>