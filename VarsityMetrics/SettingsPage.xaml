<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VarsityMetrics.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Label BackgroundColor="{AppThemeBinding Light=White, Dark=Black}" />
        <Button
        Text="Light/Dark" 
        Clicked="LightDark"/>
        <Button
        Text="Change Color" 
        Clicked="ColorChange"/>
        <Button
        Text="Football Team Decor" 
        Clicked="TeamDecor"/>
        <Label Text="This text is green in light mode, and red in dark mode."
           TextColor="{AppThemeBinding Light=Green, Dark=Red}" />
    </VerticalStackLayout>
</ContentPage>